{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
